<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (errors && errors.array().length > 0) { %>
  <ul class="notice error">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%- messages() %>

<form class="form" action="/account/signup" method="post">
  <fieldset>
    <label>
      First Name<span class="required">*</span>
      <input
        type="text"
        name="account_firstname"
        id="firstname"
        required
        autocomplete="given-name"
        value="<%= formData?.account_firstname || '' %>"
      />
    </label>

    <label>
      Last Name<span class="required">*</span>
      <input
        type="text"
        name="account_lastname"
        id="lastname"
        required
        autocomplete="family-name"
        value="<%= formData?.account_lastname || '' %>"
      />
    </label>

    <label>
      Email<span class="required">*</span>
      <input
        type="email"
        name="account_email"
        id="email"
        required
        autocomplete="email"
        value="<%= formData?.account_email || '' %>"
      />
    </label>

    <label id="password-field">
      <span>Password</span> <span class="required">*</span>
      <input
        type="password"
        name="account_password"
        id="password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
      <img
        src="/images/site/eye-close.png"
        alt="eye close icon"
        id="eye-icon"
      />
      <span class="password-requirements">
        Passwords must be at least 12 characters and contain at least
        1 number, 1 capital letter and 1 special character
      </span>
    </label>
  </fieldset>

  <fieldset class="submit-btn-container">
    <input type="submit" role="button" value="Signup" />
  </fieldset>

  <div class="form-footer">
    <p>Have an account? <a href="/account/login">Login</a></p>
  </div>
</form>